<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
         
        <servlet>
    	<servlet-name>faqInsertServlet</servlet-name>
    	<servlet-class>game.faq.faqInsertServlet</servlet-class>
    	</servlet>
    	<servlet-mapping>
    	<servlet-name>faqInsertServlet</servlet-name>
    	<url-pattern>/insert</url-pattern>
    	</servlet-mapping>
        
        <servlet>
        <servlet-name>UpdateFaqServlet</servlet-name>
        <servlet-class>game.faq.UpdateFaqServlet</servlet-class>
        </servlet>
        <servlet-mapping>
        <servlet-name>UpdateFaqServlet</servlet-name>
        <url-pattern>/update</url-pattern>
        </servlet-mapping>
        
         <servlet>
        <servlet-name>DeleteFaqServlet</servlet-name>
        <servlet-class>game.faq.DeleteFaqServlet</servlet-class>
        </servlet>
        <servlet-mapping>
        <servlet-name>DeleteFaqServlet</servlet-name>
        <url-pattern>/delete</url-pattern>
        </servlet-mapping>
        
         <servlet>
    	<servlet-name>RetriveFaqServlet</servlet-name>
    	<servlet-class>game.faq.RetriveFaqServlet</servlet-class>
    	</servlet>
    	<servlet-mapping>
    	<servlet-name>RetriveFaqServlet</servlet-name>
    	<url-pattern>/retrive</url-pattern>
    	</servlet-mapping>
        
</web-app>